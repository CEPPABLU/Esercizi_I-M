@model Eser_Impiegato.Models.Impiegato

<h1>Inserisci Impiegato</h1>

<form method="post" asp-controller="Impiegato" asp-action="Salvataggio">
    <div class="form-group">
        <label for="Matricola">Matricola</label>
        <input type="text" class="form-control" asp-for=Matricola />
    </div>
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" class="form-control" asp-for=Nome/>
    </div>
    <div class="form-group">
        <label for="Cognome">Cognome</label>
        <input type="text" class="form-control" asp-for=Cognome/>
    </div>
    <div class="form-group">
        <label for="DataNascita">Data Nascita</label>
        <input type="date" class="form-control" asp-for=DataNascita />
    </div>
    <div class="form-group">
        <label for="Ruolo">Ruolo</label>
        <input type="text" class="form-control" asp-for=Ruolo />
    </div>
    <div class="form-group">
        <label for="Reparto">Reparto</label>
        <input type="text" class="form-control" asp-for=Reparto />
    </div>
    <div class="form-group">
        <label for="IndirizzoResidenza">Indirizzo Residenza</label>
        <input type="text" class="form-control" asp-for=IndirizzoResidenza />
    </div>
    <div class="form-group">
        <label for="CittaResidenza">Citta Residenza</label>
        <input type="text" class="form-control" asp-for=CittaResidenza />
    </div>
    <div class="form-group">
        <label for="ProvinciaResidenza">Provincia Residenza</label>
        <input type="text" class="form-control" asp-for=ProvinciaResidenza />
    </div>

    <button class="btn btn-primary btn-block" type="submit">Salva</button>
</form>
